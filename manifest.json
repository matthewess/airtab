{
  "manifest_version": 2,
  "name": "Airtab",
  "version": "0",

  "description": "Cloud-synced tab freezing/saving.",
  "icons": {
    "16": "images/cloud-16.png",
    "48": "images/cloud-48.png",
    "128": "images/cloud-128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "images/cloud-16.png",
      "24": "images/cloud-24.png",
      "32": "images/cloud-32.png"
    },
    "default_title": "Airtab"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "tabs"
  ],
  "oauth2": {
    "client_id": "587428467193-k526arvb6l752mrf7t5jvj7b7j4brdpt.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  }
}